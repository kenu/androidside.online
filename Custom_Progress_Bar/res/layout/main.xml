	android:layout_height="fill_parent">

	<com.beanie.example.views.MyProgressBar
		android:text="@+id/TextView01" android:id="@+id/progressBar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></com.beanie.example.views.MyProgressBar>
